<?xml version="1.0" encoding="UTF-8" ?>
<provider id="sohu">
  <name>Sohu</name>
  <icon>sohu</icon>
  <translations>account-plugins</translations>
  <domains>.*t\.sohu\.com</domains>

  <template>
    <group name="auth">
      <setting name="method">oauth2</setting>
      <setting name="mechanism">HMAC-SHA1</setting>
      <group name="oauth2">
        <group name="HMAC-SHA1">
          <setting name="RequestEndpoint">http://api.t.sohu.com/oauth/request_token</setting>
          <setting name="TokenEndpoint">http://api.t.sohu.com/oauth/access_token</setting>
          <setting name="AuthorizationEndpoint">http://api.t.sohu.com/oauth/authorize</setting>
          <setting name="Callback">https://wiki.ubuntu.com/</setting>
          <setting name="ConsumerKey">@SOHU_CONSUMER_KEY@</setting>
          <setting name="ConsumerSecret">@SOHU_CONSUMER_SECRET@</setting>
          <setting name="AllowedSchemes" type="as">['https','http']</setting>
        </group>
      </group>
    </group>
  </template>
</provider>
