<?xml version="1.0" encoding="UTF-8" ?>
<provider id="linkedin">
  <name> LinkedInÂ® </name>
  <icon>linkedin</icon>
  <domains>*linkedin\.com</domains>
  <translations>account-plugins</translations>
  <plugin>generic-oauth</plugin>

  <template>
    <group name="auth">
      <setting name="method">oauth2</setting>
      <setting name="mechanism">HMAC-SHA1</setting>
      <group name="oauth2">
        <group name="HMAC-SHA1">
          <setting name="RequestEndpoint">https://api.linkedin.com/uas/oauth/requestToken</setting>
          <setting name="TokenEndpoint">https://api.linkedin.com/uas/oauth/accessToken</setting>
          <setting name="AuthorizationEndpoint">https://www.linkedin.com/uas/oauth/authorize</setting>
          <setting name="ConsumerKey">@LINKEDIN_CONSUMER_KEY@</setting>
          <setting name="ConsumerSecret">@LINKEDIN_CONSUMER_SECRET@</setting>
          <setting name="Callback">https://www.linkedin.com/</setting>
        </group>
      </group>
    </group>
  </template>
</provider>
